{{!< default}}


<div class="main">

<div class="tag-title"><h1>Topic: {{tag.name}}</h1></div>

{{#foreach posts}}

<section id="{{id}}" class="{{post_class}}">

    <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2> 
    <div class="post-tags">{{tags separator="&nbsp;"}}</div>
    <div class="post-date">{{date published_at format="YYYY-MM-DD"}}</div>

    <section class="post-excerpt">
        <p>{{excerpt words="50"}}</p>
    </section>

</section>

{{/foreach}}

{{pagination}}

</div>